---
import Breadcrumb from '../layout/Breadcrumb.astro';
import Layout from '../../layouts/Layout.astro';
import Reglasection from './Reglasection.astro';
import Localihorasection from './Localihorasection.astro';
import Excelsection from './Excelsection.astro';
import Inscripsection from './Inscripsection.astro';
import Premiosection from './Premiosection.astro';

//Para obtener el ex_link hay que ir al spreadsheet y luego archivo > compartir > publicar en la web
//en la pesta√±a LINK elegir la hoja y copiar ese link generado

const {titulo, descripcion, aula, horario, ex_link, form_link, reg_link, img_path, premios} = Astro.props;
---

<Layout title="Competiciones">
  <Breadcrumb>
    <Fragment slot="title">{titulo}</Fragment>
    <Fragment slot="texto">{descripcion}</Fragment>
  </Breadcrumb>
  <Inscripsection link={form_link} img_path={img_path} />
  <Reglasection link={reg_link}>
    <Fragment slot="col-1"><slot name="reglas-col-1" /></Fragment>
    <Fragment slot="col-2"><slot name="reglas-col-2" /></Fragment>
  </Reglasection>
  <Premiosection premios={premios}></Premiosection>
  <Localihorasection>
    <Fragment slot="_aula">{aula}</Fragment>
    <Fragment slot="_horario">{horario}</Fragment>
  </Localihorasection>
  <!-- <Excelsection link={ex_link} /> -->
</Layout>
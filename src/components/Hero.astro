---
import { Image } from 'astro:assets';
import heroImg from '../assets/img/52924759040_caabf0e4bc_o (1).jpg';

const orgs = ['UGR', 'TSTC', 'OSL', {org: 'ETSIIT', rename: 'etsiit-horizontal-white.png'}, 'DEIIT', 'CSIRC', 'AESIT']
---

<!-- ====== Hero Section Start -->
<section
  id="home"
  class="relative overflow-hidden bg-gradient-to-bl from-primary/80 from-30% via-secondary/85 via-70% to-tertiary/95 h-[616px] pt-[120px] md:pt-[130px] lg:pt-[180px] pb-[75px] md:pb-[85px] lg:pb-[115px]"
>
  <div class="absolute -ml-48 inset-0 min-h-full min-w-full -z-10 flex items-center justify-center">
    <!--! FIXME This gives the following error: free(): invalid size \n Aborted (core dumped).
      The image as it is now wights a lot and has a poor loading time, so should be optimized -->
    <!-- <Image src={heroImg} alt="" width={954} height={636} /> -->
    <img src={heroImg.src} alt="" />
  </div>
  <div class="flex flex-col items-center justify-center relative h-full">
    <!-- <div
          class="hero-content wow fadeInUp mx-auto max-w-[780px] text-center"
          data-wow-delay=".2s"
        > -->
    <h1
      class="mb-6 lg:mb-8 text-3xl font-bold leading-snug text-white sm:text-4xl sm:leading-snug lg:text-5xl lg:leading-[1.2]"
    >
      UGR LAN PARTY
    </h1>
    <p
      class="mx-auto mb-9 max-w-[600px] font-medium text-base text-white sm:text-lg sm:leading-[1.44]"
    >
      ¡El mayor evento universitario de eSports de Granada!
    </p>
    <a
      href="#"
      class="inline-flex items-center justify-center rounded-md bg-white py-[14px] px-7 text-center text-base font-medium text-dark shadow-1 transition duration-300 ease-in-out hover:text-body-color hover:bg-gray-2"
    >
      Inscríbete
    </a>

    <div class="flex flex-row max-w-[90%] justify-center items-stretch px-10 gap-2 mt-14 lg:mt-16 max-h-[4rem] lg:max-h-20 h-6 md:h-auto">
      { orgs.map(org => {
        let imgSrc;
        if (typeof org === 'string')
          imgSrc = `/img/patrons/orgs/${org.replace(/ /, '-').toLowerCase()}-white.png`
        else
          imgSrc = `/img/patrons/orgs/${org.rename}`
      
        return <>
          <img src={imgSrc} alt={typeof org === 'string' ? org : org.org} class="grow-0 shrink min-w-0" />
        </>
      }) }
    </div>
  </div>
</section>
<!-- ====== Hero Section End -->
